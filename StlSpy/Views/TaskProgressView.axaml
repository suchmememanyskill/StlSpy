<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="30"
             x:Class="StlSpy.Views.TaskProgressView" HorizontalAlignment="Center">
    <StackPanel Orientation="Vertical" Spacing="3" HorizontalAlignment="Center">
        <TextBlock FontWeight="Bold" Name="TaskName" HorizontalAlignment="Center" Padding="3,0" TextWrapping="Wrap" />
        <Panel>
            <ProgressBar VerticalAlignment="Center" Value="50" Name="ProgressBar" Height="25" CornerRadius="0"></ProgressBar>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="3">
                <Label Name="TaskProgress">1/2 posts</Label>
                <Label Name="ExtraTasksCount">(+ 1 task)</Label>
            </StackPanel>
        </Panel>
    </StackPanel>
</UserControl>
