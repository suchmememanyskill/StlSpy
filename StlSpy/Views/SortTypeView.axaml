<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StlSpy.Views.SortTypeView">
    <ScrollViewer>
        <StackPanel Name="VerticalStackPanel" Spacing="10" Margin="10">
            <StackPanel Name="Header" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <Label FontSize="18" Name="SortTypeLabel" Margin="0,0,20,0" />
                <Button Name="LeftArrow" Padding="6,0">
                    <Label FontSize="20" Padding="0" VerticalAlignment="Center">&lt;</Label>
                </Button>
                <Label Name="Page" FontSize="18" />
                <Button Name="RightArrow" Padding="6,0">
                    <Label FontSize="20" Padding="0" VerticalAlignment="Center">&gt;</Label>
                </Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
